<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-6">

      <h1>Editing Book</h1>

        <% if @book.errors.any? %>
        <div id="error_explanation">
          <%= @book.errors.count %> errors prohibited this obj from being saved:
        </div>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>


      <%= form_with model: @book, url: book_path do |f| %>
        <div class="field form-group">
          <%= f.label :Title, class: "form-label" %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :Opinion, class: "form-label" %><br>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Update Book", class: "btn btn-success mt-2" %>
        </div>

      <% end %>
      <div class="row">
        <div class="col-12 mt-3">
         <%= link_to "Show", book_path(@book.id) %>ï½œ<%= link_to "Back", books_path %>
         </div>
      </div>

    </div>
  </div>
</div>