<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-6">

      <h2>Log in</h2>

      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="field form-group">
          <%= f.label :name, class: "form-label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-check mb-2">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary btn-outline-light" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>


    </div>
  </div>
</div>