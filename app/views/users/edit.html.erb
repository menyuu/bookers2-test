<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-6">

      <h2>User info</h2>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <%= @user.errors.count %> error prohibited this obj from being saved:
          </div>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>


      <%= form_with model: @user, url: user_path(current_user.id) do |f| %>
        <div class="field form-group">
          <%= f.label :Name, class: "form-label" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Image, class: "form-label" %><br>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
        </div>
        <div>
          <%= f.label :Introduction, class: "form-label" %><br>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-success mt-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>