<div>
  <h2>User info</h2>
  
  
  <div>
    <% if @user.errors.any? %>
      <%= @user.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  
  <%= form_with model: @user, url: user_path(current_user.id) do |f| %>
    <div>
      <%= f.label :Name %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div>
      <%= f.label :Image %><br>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div>
      <%= f.label :Introduction %><br>
      <%= f.text_area :introduction  %>
    </div>
    <div>
      <%= f.submit "Update User" %>
    </div>
  <% end %>
</div>