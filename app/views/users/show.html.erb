<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list' %>
    </div>

    <div class="col-md-8 mt-sm-5 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover">
        <thead>
          <th></th>
          <th>Title</th>
          <th></th>
          <th>Opinion</th>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td></td>
            <td colspan="3"><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>


    </div>
  </div>
</div>