<div class="container">
  <div class="row">
    <div class="col-md-3 mb-5">
      <%= render 'layouts/list' %>
    </div>

    <div class="col-md-8 offset-md-1">

        <h2>Users</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
            </thead>

            <% @users.each do |user|%>
            <tbody>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <td colspan="3"><%= link_to "show", user_path(user.id) %></td>
            </tbody>
            <% end %>
          </table>

    </div>
  </div>
</div>