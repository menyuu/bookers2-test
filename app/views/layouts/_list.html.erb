        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table table-hover">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th style="word-break: break-all;"><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <div class="row">
        <div class="col-12 mx-auto mb-3 px-0">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

      </div>

      <h2>New book</h2>


      <%= form_with model: Book.new, url: books_path do |f| %>
        <div class="field form-group">
          <%= f.label :Title, class: "form-label" %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :Opinion, class: "form-label" %><br>
          <%= f.text_area :body, class: "form-control", rows: "6" %>
        </div>

        <div class="actions">
          <%= f.submit "Create Book", class: "btn btn-success btn-block" %>
        </div>

      <% end %>


