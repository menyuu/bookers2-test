<div>
  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <!--アイコンに変更-->
  <%= link_to "編集", edit_user_path(current_user) %>

</div>


<%= form_with model: Book.new, url: books_path do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>

<% end %>